{
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "eslint": "^9.3.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "scripts": {
    "dev": "turbo run dev",
    "prepare": "husky",
    "lint": "eslint .",
    "format": "prettier --write .",
    "postinstall": "husky install"
  }
}
